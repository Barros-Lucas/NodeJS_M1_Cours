doctype html  
html(lang='en')  
 head
   title MiniTp ServerWeb
   head
    style
      include style.css
      meta(charset='utf-8')
      meta(name='viewport')
      link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
      link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
      script(type='text/javascript' src='js/contact.js')
 body
   h5 Voici le contenu de la table : #{tableName}
   div.container
     table.table 
      tr
        th Identifiant
        th Ville
        th Modifier
        th Supprimer
      tbody
        each val in dataP
          tr
            td #{val._id}
            td #{val.name}
            td
              button.btn(type='button' onclick='update()') v
            td
              button.btn(type='button' onclick='delete()') x

        #normalModal.modal.hide
          div(class="modal-dialog")
            div(class="modal-content")
              div(class="modal-header")
                button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;
                h4(class="modal-title") Title
              
              div(class="modal-body")
                p text form etc. &hellip;
                  input(id= "x" type="radio", name="symbol" value="x" checked) 
                  = " x"
                  input(id= "y" type="radio", name="symbol" value="o") 
                  = " o"
                div(class="modal-footer")
                button(type="button" class="btn btn-default" data-dismiss="modal") Close
                button(type="button" onclick="test()" class="btn btn-primary") Submit
