doctype html
head
  meta(charset='utf-8')
  meta(name='viewport')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
  script(type='text/javascript' src='js/contact.js')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js')

body
   h5 Voici le contenu de la table : #{tableName}
   div.container
     table.table 
      tr
        th Identifiant
        th Ville
        th Modifier
        th Supprimer
      tbody
        each val in dataP
          tr
            td #{val._id}
            td #{val.name}
            td
              button.btn(type='button' onclick="modifName(\'"+ val._id +"\',\'"+val.name+ "\')") o
            td
              button.btn(type='button' onclick="removeCity(\'"+ val._id+"\')") x
#modifVille-modal.modal(role='dialog')
  .modal-dialog
    .modal-content
      .modal-header
        a.close(data-dismiss='modal') &times;
        h3 Modifier
      form#modifVille(name='contact' role='form')
        .modal-body
          .form-group
            label(for='name') Nom de la ville
            input#name.form-control(type='text' name='name' required='')
            input#id_ville.form-control(type='text' name='id_ville' required='' style={display: 'none'})
        .modal-footer
          button.btn.btn-default(type='button' data-dismiss='modal') Retour
          input#submit.btn.btn-success(type='submit')

    script
        include scriptCities.js
